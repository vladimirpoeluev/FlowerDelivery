@{
    Layout = "_AdminLayout";
}
@using MigrationDataBase.Records
@model Role[]
<div class="form-entrance">
    @foreach (Role flower in Model)
    {
        <a asp-controller="Admin" asp-action="Flower" asp-route-idFlower="@flower.Id">
            <div class="card">
                <div class="image-card">
                    <img alt="Карта заказа" src="https://cdn-icons-png.flaticon.com/512/149/149452.png" />
                </div>
                <div class="card-descrip">
                    <b>@flower.Id</b>
                    <p>
                        @(flower.User.Name) @(flower.User.Surname)
                    </p>
                </div>
            </div>
        </a>

    }
</div>
